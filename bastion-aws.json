{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
        "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
        "region": "",
        "ami": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `region`}}",
            "source_ami": "{{user `ami`}}",
            "instance_type": "t2.micro",
            "ssh_username": "ubuntu",
            "ami_name": "OpenVPN {{timestamp}}"
        }
    ],
    "provisioners": [
        {
          "type": "file",
          "source": "bin/",
          "destination": "/tmp"
        },
        {
            "type": "shell",
            "inline": [
                "sudo mkdir -p /root/.bin",
                "sudo cp -f /tmp/bin/* /root/.bin",
                "sudo chmod 0744 /root/bin/*",
                "sudo mv /etc/rc.local /etc/rc.local.orig",
                "sudo ln -s /root/.bin/rc.local /etc/rc.local",
                "sudo ln -s /root/.bin/create_vpn_user /usr/local/bin/create_vpn_user"
            ]
        }
    ]
}
