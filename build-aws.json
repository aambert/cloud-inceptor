{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
        "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
        "region": "",
        "ami": "",
        "name": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `region`}}",
            "source_ami": "{{user `ami`}}",
            "instance_type": "t2.micro",
            "ssh_username": "ubuntu",
            "ami_name": "{{user `name`}}"
        }
    ],
    "provisioners": [
        {
          "type": "file",
          "source": "bin",
          "destination": "/tmp"
        },
        {
            "type": "shell",
            "inline": [
                "sudo chmod 0755 /tmp/bin/*",
                "sudo /tmp/bin/install_packages",
                "sudo mv /tmp/bin/rc.local /etc/rc.local",
                "sudo mkdir -p /root/.bin",
                "sudo mv /tmp/bin/common /root/.bin",
                "sudo mv /tmp/bin/configure_* /root/.bin",
                "sudo mv /tmp/bin/create_vpn_user /usr/local/bin/create_vpn_user",
                "sudo rm -fr /tmp/*"
            ]
        }
    ]
}
