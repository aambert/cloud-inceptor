{
    "variables": {
        "gcp_acct_file": "{{env `GOOGLE_CREDENTIALS`}}",
        "gcp_project_id": "{{env `GOOGLE_PROJECT`}}",
        "gcp_zone": "{{env `GOOGLE_ZONE`}}",
        "source_image_family": "",
        "image_name": "",
        "build_dir": ""
    },
    "builders": [
        {
            "type": "googlecompute",
            "account_file": "{{user `gcp_acct_file`}}",
            "project_id": "{{user `gcp_project_id`}}",
            "zone": "{{user `gcp_zone`}}",
            "source_image_family": "{{user `source_image_family`}}",
            "ssh_username": "ubuntu",
            "image_family": "appbricks-bastion",
            "image_name": "{{user `image_name`}}",
            "image_description": "Appbricks bastion instance base image"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "{{user `build_dir`}}/scripts/config",
            "destination": "/tmp/inceptor-scripts"
        },
        {
            "type": "file",
            "source": "{{user `build_dir`}}/www-static-home",
            "destination": "/tmp/www-static-home"
        },
        {
            "type": "shell",
            "expect_disconnect": "true",
            "inline_shebang": "/bin/bash -x",
            "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [ 
                "chmod +x /tmp/inceptor-scripts/*",
                "/tmp/inceptor-scripts/install_packages" 
            ]
        }
    ]
}