{
    "variables": {
        "gcp_acct_file": "{{env `GOOGLE_CREDENTIALS`}}",
        "gcp_project_id": "{{env `GOOGLE_PROJECT`}}",
        "gcp_zone": "{{env `GOOGLE_ZONE`}}",
        "source_image_family": "",
        "image_name": "",
        "build_dir": ""
    },
    "builders": [
        {
            "type": "googlecompute",
            "account_file": "{{user `gcp_acct_file`}}",
            "project_id": "{{user `gcp_project_id`}}",
            "zone": "{{user `gcp_zone`}}",
            "source_image_family": "{{user `source_image_family`}}",
            "ssh_username": "ubuntu",
            "image_family": "appbricks-bastion",
            "image_name": "{{user `image_name`}}",
            "image_description": "Appbricks bastion instance base image"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "{{user `build_dir`}}/scripts/config",
            "destination": "/tmp/inceptor-scripts"
        },
        {
            "type": "shell",
            "expect_disconnect": "true",
            "inline": [
                "sudo chmod 0755 /tmp/inceptor-scripts/*",
                "sudo /tmp/inceptor-scripts/install_packages",
                "sudo rm /tmp/inceptor-scripts/install_packages",
                "sudo mv /tmp/inceptor-scripts/rc.local /etc/rc.local",
                "sudo mv /tmp/inceptor-scripts /root/.bin",
                "sudo rm -rf /var/lib/apt/lists/*",
                "sudo rm -fr /tmp/*"
            ]
        }
    ]
}