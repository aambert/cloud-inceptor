{
  "variables": {
    "iso_url": "",
    "iso_checksum": "",
    "iso_checksum_type": "",
    "esxi_remote_host": "{{env `ESX_HOST`}}",
    "esxi_datastore": "{{env `ESX_DATASTORE`}}",
    "esxi_remote_username": "{{env `ESX_USERNAME`}}",
    "esxi_remote_password": "{{env `ESX_PASSWORD`}}",
    "vm_name": "",
    "vm_disk_adapter_type": "scsi",
    "vm_disk_type": "thin",
    "vm_disk_size": "10240",
    "vm_guest_os_type": "ubuntu-64",
    "vm_memory": "1024",
    "vm_vcpu": "1",
    "vm_network": "{{env `ESX_NETWORK`}}",
    "boot_command_prefix": "",
    "build_dir": ""
  },
  "builders": [
    {
      "boot_command": [
        "{{ user `boot_command_prefix` }}",
        "/install/vmlinuz <wait>",
        "auto <wait>",
        "initrd=/install/initrd.gz <wait>",
        "grub-installer/bootdev=/dev/sda <wait>",
        "debian-installer=en_US <wait>",
        "debconf/frontend=noninteractive <wait>",
        "fb=false <wait>",
        "kbd-chooser/method=us <wait>",
        "locale=en_US <wait>",
        "keyboard-configuration/layout=USA <wait>",
        "keyboard-configuration/variant=USA <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-setup/layoutcode=us <wait>",
        "console-setup/modelcode=pc105 <wait>",
        "netcfg/get_domain=appbricks.io <wait>",
        "netcfg/get_hostname=inceptor <wait>",
        "noapic <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "-- <wait>",
        "<enter><wait>"
      ],
      "name": "{{ user `vm_name` }}",
      "output_directory": "{{user `build_dir`}}/.build/images",
      "format": "ova",
      "http_directory": "{{user `build_dir`}}/packer/http",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "type": "vmware-iso",
      "remote_type": "esx5",
      "remote_host": "{{ user `esxi_remote_host` }}",
      "remote_username": "{{ user `esxi_remote_username` }}",
      "remote_password": "{{ user `esxi_remote_password` }}",
      "remote_datastore": "{{ user `esxi_datastore` }}",
      "guest_os_type": "{{ user `vm_guest_os_type` }}",
      "ssh_username": "ubuntu",
      "ssh_password": "1ncept0r",
      "ssh_wait_timeout": "60m",
      "vnc_disable_password": "true",
      "vm_name": "{{ user `vm_name` }}-{{ timestamp }}",
      "vmdk_name": "{{ user `vm_name` }}",
      "disk_size": "{{ user `vm_disk_size` }}",
      "disk_type_id": "{{ user `vm_disk_type` }}",
      "disk_adapter_type": "{{ user ` vm_disk_adapter_type` }}",
      "vmx_data": {
        "memsize": "{{ user `vm_memory` }}",
        "numvcpus": "{{ user `vm_vcpu` }}",
        "ethernet0.networkName": "{{ user `vm_network` }}",
        "ethernet0.present": "TRUE",
        "ethernet0.startConnected": "TRUE",
        "ethernet0.virtualDev": "vmxnet3",
        "ethernet0.addressType": "generated",
        "ethernet0.wakeOnPcktRcv": "FALSE"
      },
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'packer'|sudo -S bash 'shutdown.sh'"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "{{user `build_dir`}}/scripts/vsphere/base.sh",
        "{{user `build_dir`}}/scripts/vsphere/vsphere.sh",
        "{{user `build_dir`}}/scripts/vsphere/cloud_init.sh",
        "{{user `build_dir`}}/scripts/vsphere/cleanup.sh"
      ]
    },
    {
      "type": "file",
      "source": "{{user `build_dir`}}/scripts/config",
      "destination": "/tmp/inceptor-scripts"
    },
    {
      "type": "file",
      "source": "{{user `build_dir`}}/www-static-home",
      "destination": "/tmp/www-static-home"
    },
    {
      "type": "shell",
      "expect_disconnect": "true",
      "inline": [
        "sudo chmod 0755 /tmp/inceptor-scripts/*",
        "sudo /tmp/inceptor-scripts/install_packages",
        "sudo rm /tmp/inceptor-scripts/install_packages",
        "sudo mv /tmp/inceptor-scripts/rc.local /etc/rc.local",
        "sudo mv /tmp/inceptor-scripts /root/.bin",
        "sudo mv /tmp/www-static-home/* /var/www/html",
        "sudo touch /root/config.yml",
        "sudo rm -rf /var/lib/apt/lists/*",
        "sudo rm -fr /tmp/*"
      ]
    }
  ]
}