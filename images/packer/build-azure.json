{
    "variables": {
        "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
        "client_id": "{{env `ARM_CLIENT_ID`}}",
        "client_secret": "{{env `ARM_CLIENT_SECRET`}}",

        "resource_group": "",
        "location": "",
        
        "image_publisher": "",
        "image_offer": "",
        "image_sku": "",
        "image_version": "",
        "vm_size": "Standard_A1_v2",

        "image_name": "",
        "build_dir": ""
    },
    "builders": [
        {
            "type": "azure-arm",
            "subscription_id": "{{user `subscription_id`}}",
            "client_id": "{{user `client_id`}}",
            "client_secret": "{{user `client_secret`}}",

            "os_type": "Linux",
            "image_publisher": "{{user `image_publisher`}}",
            "image_offer": "{{user `image_offer`}}",
            "image_sku": "{{user `image_sku`}}",
            "image_version": "{{user `image_version`}}",

            "managed_image_resource_group_name": "{{user `resource_group`}}",
            "managed_image_name": "{{user `image_name`}}",

            "location": "{{user `location`}}",
            "vm_size": "{{user `vm_size`}}",
            "ssh_username": "ubuntu"            
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "{{user `build_dir`}}/scripts/config",
            "destination": "/tmp/inceptor-scripts"
        },
        {
            "type": "shell",
            "expect_disconnect": "true",
            "inline": [
                "sudo chmod 0755 /tmp/inceptor-scripts/*",
                "sudo /tmp/inceptor-scripts/install_packages",
                "sudo rm /tmp/inceptor-scripts/install_packages",
                "sudo mv /tmp/inceptor-scripts/rc.local /etc/rc.local",
                "sudo mv /tmp/inceptor-scripts /root/.bin",
                "sudo rm -rf /var/lib/apt/lists/*",
                "sudo rm -fr /tmp/*"
            ]
        },
        {
            "type": "shell",
            "inline_shebang": "/bin/sh -x",
            "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
            ]
        }
    ]
}