{
    "variables": {
        "gcp_acct_file": "{{env `GOOGLE_CREDENTIALS`}}",
        "gcp_project_id": "{{env `GOOGLE_PROJECT`}}",
        "gcp_zone": "{{env `GOOGLE_ZONE`}}",
        "source_image_family": "",
        "image_name": ""
    },
    "builders": [
        {
            "type": "googlecompute",
            "account_file": "{{user `gcp_acct_file`}}",
            "project_id": "{{user `gcp_project_id`}}",
            "zone": "{{user `gcp_zone`}}",
            "source_image_family": "{{user `source_image_family`}}",
            "ssh_username": "ubuntu",
            "image_family": "appbricks-bastion",
            "image_name": "{{user `image_name`}}",
            "image_description": "Appbricks bastion instance base image"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "bin",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "inline": [
                "sudo chmod 0755 /tmp/bin/*",
                "sudo /tmp/bin/install_packages",
                "sudo mv /tmp/bin/rc.local /etc/rc.local",
                "sudo mkdir -p /root/.bin",
                "sudo mv /tmp/bin/common /root/.bin",
                "sudo mv /tmp/bin/configure_* /root/.bin",
                "sudo mv /tmp/bin/restart_* /root/.bin",
                "sudo mv /tmp/bin/*_vpn_user /root/.bin",
                "sudo rm -rf /var/lib/apt/lists/*",
                "sudo rm -fr /tmp/*"
            ]
        }
    ]
}