#!/bin/bash

itfs=( $(ip a | grep "^[0-9]*: e" | awk '{ print substr($2,0,length($2)-1) }') )
for itf in ${itfs[@]}; do
    echo "*** Restarting NIC $itf..."
    ifdown $itf
    ifup $itf
done

echo -e "\n============================= Network Interfaces =============================="
ip a
echo -e "=================================== Routes ===================================="
route -n
echo -e "===============================================================================\n"
